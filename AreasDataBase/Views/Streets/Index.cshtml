@model IEnumerable<AreasDataBase.Models.Street>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameStreet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameStreet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.NameDistrict)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdStreet">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdStreet">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdStreet">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
