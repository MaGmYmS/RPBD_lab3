@model AreasDataBase.Models.Street

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Street</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NameStreet)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NameStreet)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.District)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.District.NameDistrict)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdStreet" />

        <label>
            <input type="radio" name="deleteType" value="cascade" checked /> Каскадное удаление
        </label>
        <label>
            <input type="radio" name="deleteType" value="nonCascade" /> Не каскадное удаление
        </label>

        <br /><br />

        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Вернуться к списку</a>
    </form>
</div>
